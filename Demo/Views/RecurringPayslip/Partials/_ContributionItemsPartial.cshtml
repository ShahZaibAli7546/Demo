@model List<Demo.Models.RecurringPayslipContributionItem>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Contribution Account</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="contributionItemsBody">
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    <select asp-for="@Model[i].ContributionAccountId" class="form-select" asp-items="ViewBag.ContributionAccounts">
                        <option value="">-- Select --</option>
                    </select>
                </td>
                <td><input asp-for="@Model[i].Description" class="form-control" /></td>
                <td><input asp-for="@Model[i].Amount" class="form-control" value="0" /></td>
                <td><button type="button" class="btn btn-danger remove-contribution-item">✖️</button></td>
            </tr>
        }
    </tbody>
</table>
<button type="button" id="addContributionItemBtn" class="btn btn-success mb-3">+ Add Contribution Item</button>
