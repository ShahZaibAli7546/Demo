@model List<Demo.Models.RecurringPayslipDeductionItem>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Deduction Account</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="deductionItemsBody">
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    <select asp-for="@Model[i].DeductionAccountId" class="form-select" asp-items="ViewBag.DeductionAccounts">
                        <option value="">-- Select --</option>
                    </select>
                </td>
                <td><input asp-for="@Model[i].Description" class="form-control" /></td>
                <td><input asp-for="@Model[i].Amount" class="form-control" value="0" /></td>
                <td>
                    <select asp-for="@Model[i].DeductionType" class="form-select">
                        <option value="Absolute">✖️ Absolute</option>
                        <option value="Percentage">%</option>
                    </select>
                </td>
                <td><button type="button" class="btn btn-danger remove-deduction-item">✖️</button></td>
            </tr>
        }
    </tbody>
</table>
<button type="button" id="addDeductionItemBtn" class="btn btn-success mb-3">+ Add Deduction Item</button>
