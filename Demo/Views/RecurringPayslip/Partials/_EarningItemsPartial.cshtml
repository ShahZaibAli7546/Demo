@model List<Demo.Models.RecurringPayslipEarningItem>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Earning Item</th>
            <th>Rate</th>
            <th>Days</th>
            <th>Hours</th>
            <th>Minutes</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="earningItemsBody">
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    <select asp-for="@Model[i].EarningItemId" class="form-select" asp-items="ViewBag.EarningItems">
                        <option value="">-- Select --</option>
                    </select>
                </td>
                <td><input asp-for="@Model[i].Rate" class="form-control" value="0" /></td>
                <td><input asp-for="@Model[i].Days" class="form-control" value="0" /></td>
                <td><input asp-for="@Model[i].Hours" class="form-control" value="0" /></td>
                <td><input asp-for="@Model[i].Minutes" class="form-control" value="0" /></td>
                <td><input asp-for="@Model[i].Description" class="form-control" /></td>
                <td><input asp-for="@Model[i].Amount" class="form-control" readonly /></td>
                <td><button type="button" class="btn btn-danger remove-earning-item">✖️</button></td>
            </tr>
        }
    </tbody>
</table>
<button type="button" id="addEarningItemBtn" class="btn btn-success mb-3">+ Add Earning Item</button>
