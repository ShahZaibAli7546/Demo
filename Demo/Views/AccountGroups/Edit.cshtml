@model Demo.Models.AccountGroup
@{
    ViewData["Title"] = "✏️ Edit Group";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="mb-4 text-primary">✏️ Edit Account Group</h2>

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />    <div class="col-md-4">
        <label asp-for="GroupCode" class="form-label">Group Code</label>
        <input asp-for="GroupCode" class="form-control" />
    </div>
    <div class="col-md-4">
        <label asp-for="GroupName" class="form-label">Group Name</label>
        <input asp-for="GroupName" class="form-control" />
    </div>
    <div class="col-md-4">
        <label asp-for="StatementType" class="form-label">Statement Type</label>
        <select asp-for="StatementType" class="form-select">
            <option value="BalanceSheet">Balance Sheet</option>
            <option value="ProfitAndLoss">Profit & Loss</option>
        </select>
    </div>
    <div class="col-md-4">
        <label asp-for="IsActive" class="form-label">Status</label>
        <select asp-for="IsActive" class="form-select">
            <option value="true">Active</option>
            <option value="false">Inactive</option>
        </select>
    </div>
    <div class="col-12">
        <button class="btn btn-success">💾 Update</button>
        <a href="/AccountsDisplay/Index" class="btn btn-secondary">Back</a>
    </div>
</form>
