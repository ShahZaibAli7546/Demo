@model Demo.Models.AccountGroup
@{
    ViewData["Title"] = "Delete Account Group";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-danger mb-4">🗑️ Delete Account Group</h2>

<div class="alert alert-warning">
    Are you sure you want to delete the group: <strong>@Model.GroupName</strong>?
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Group Code</label>
        <input class="form-control" value="@Model.GroupCode" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Statement Type</label>
        <input class="form-control" value="@Model.StatementType" readonly />
    </div>

    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
