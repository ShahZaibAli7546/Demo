@model Demo.Models.FineSlab

@{
    ViewData["Title"] = "Delete Fine Slab";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-danger mb-3">🗑️ Delete Fine Slab</h2>

<div class="alert alert-warning">
    Are you sure you want to delete <strong>@Model.Title</strong>?
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
