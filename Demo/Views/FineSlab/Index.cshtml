@model List<Demo.Models.FineSlab>

@{
    ViewData["Title"] = "Fine Slabs";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-primary mb-3">📋 Fine Slabs List</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Add Fine Slab</a>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Mode</th>
            <th>Applied Days</th>
            <th>Fine Value</th>
            <th>Status</th>
            <th style="width: 150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.SelectMode</td>
                <td>@item.AppliedDays</td>
                <td>@item.FineValue</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️ Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this slab?');">🗑️ Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
