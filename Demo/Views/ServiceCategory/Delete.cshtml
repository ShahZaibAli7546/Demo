@model Demo.Models.ServiceCategory

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="mb-4 text-danger">🗑️ Delete Service Category</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this category?
</div>

<div class="mb-3">
    <strong>Category Name:</strong> @Model.CategoryName
</div>
<div class="mb-3">
    <strong>Status:</strong> @Model.Status
</div>
<div class="mb-3">
    <strong>Remarks:</strong> @Model.Remarks
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="CategoryId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
