@model List<Demo.Models.ServiceCategory>

@{
    ViewData["Title"] = "Service Categories";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="mb-4 text-primary">📂 Service Categories</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<a asp-action="Create" class="btn btn-success mb-3">➕ Add New Category</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Remarks</th>
            <th>Status</th>
            <th style="width: 150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Remarks</td>
                    <td>@item.Status</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-primary">✏️ Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-danger">🗑️ Delete</a>
                        </div>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No categories found.</td>
            </tr>
        }
    </tbody>
</table>
