@model Demo.Models.EmployeeBank

@{
    ViewData["Title"] = "Edit Bank Account";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-primary mb-4">✏️ Edit Employee Bank Account</h2>

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />

    <div class="col-md-6">
        <label asp-for="EmployeeId" class="form-label fw-bold"></label>
        <input asp-for="EmployeeId" class="form-control" />
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="BankName" class="form-label fw-bold"></label>
        <input asp-for="BankName" class="form-control" />
        <span asp-validation-for="BankName" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="AccountNumber" class="form-label fw-bold"></label>
        <input asp-for="AccountNumber" class="form-control" />
        <span asp-validation-for="AccountNumber" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="BranchCode" class="form-label fw-bold"></label>
        <input asp-for="BranchCode" class="form-control" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">💾 Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
