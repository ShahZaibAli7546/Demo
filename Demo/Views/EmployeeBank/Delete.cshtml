@model Demo.Models.EmployeeBank

@{
    ViewData["Title"] = "Delete Bank Account";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-danger mb-4">🗑️ Delete Bank Account</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this bank record?</strong>
</div>

<div class="mb-3">
    <strong>Employee ID:</strong> @Model.EmployeeId
</div>
<div class="mb-3">
    <strong>Bank Name:</strong> @Model.BankName
</div>
<div class="mb-3">
    <strong>Account Number:</strong> @Model.AccountNumber
</div>
<div class="mb-3">
    <strong>Branch Code:</strong> @Model.BranchCode
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
