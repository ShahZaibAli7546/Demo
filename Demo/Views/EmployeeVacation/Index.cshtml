@model List<Demo.Models.EmployeeVacation>
@{
    ViewData["Title"] = "Employee Vacations";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-primary mb-4">📋 Employee Vacations List</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Add New Vacation</a>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Title</th>
            <th>Start</th>
            <th>End</th>
            <th>Weekend?</th>
            <th>Status</th>
            <th style="width: 150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Title</td>
                <td>@v.StartDate.ToShortDateString()</td>
                <td>@v.EndDate.ToShortDateString()</td>
                <td>@(v.ApplyOnWeekend ? "Yes" : "No")</td>
                <td>@v.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@v.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@v.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
