@model Demo.Models.EmployeeVacation
@{
    ViewData["Title"] = "Delete Employee Vacation";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-danger mb-4">🗑️ Confirm Delete</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this employee vacation?
</div>

<div class="mb-4">
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Start Date</dt>
        <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-3">End Date</dt>
        <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
