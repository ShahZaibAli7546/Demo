@model Demo.Models.PayslipEarningItem

@{
    ViewData["Title"] = "Create Earning Item";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="mb-4 text-primary">➕ Create Payslip Earning Item</h2>

<form asp-action="Create" method="post" class="border p-4 rounded shadow-sm bg-light">
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter earning title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ExpenseAccountId" class="form-label">Select Expense Account</label>
            <select asp-for="ExpenseAccountId" class="form-select" asp-items="ViewBag.Accounts">
                <option value="">-- Select Account --</option>
            </select>
            <span asp-validation-for="ExpenseAccountId" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="bi bi-save"></i> Save
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
