@model Demo.Models.StudentVacation

@{
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
    ViewData["Title"] = "Create Student Vacation";
}
<h2 class="text-primary mb-4">🗓️ Add New Vacation / Holiday</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="VacationTitle" class="form-label fw-bold"></label>
        <input asp-for="VacationTitle" class="form-control" />
        <span asp-validation-for="VacationTitle" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="StartDate" class="form-label fw-bold"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="EndDate" class="form-label fw-bold"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="Description" class="form-label fw-bold"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="BackgroundColor" class="form-label fw-bold">Background Color</label>
        <select asp-for="BackgroundColor" class="form-select" asp-items="new SelectList(ViewBag.Colors)">
            <option value="">-- Select Color --</option>
        </select>
        <span asp-validation-for="BackgroundColor" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Symbol" class="form-label fw-bold">Symbol</label>
        <input asp-for="Symbol" class="form-control" placeholder="e.g. 🌴 or *" />
        <span asp-validation-for="Symbol" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Campus" class="form-label fw-bold"></label>
        <select asp-for="Campus" class="form-select" asp-items="new SelectList(ViewBag.Campuses)">
            <option value="">-- Select Campus --</option>
        </select>
        <span asp-validation-for="Campus" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Status" class="form-label fw-bold"></label>
        <select asp-for="Status" class="form-select" asp-items="new SelectList(ViewBag.Statuses)">
            <option value="">-- Select Status --</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Batch" class="form-label fw-bold"></label>
        <select asp-for="Batch" class="form-select" asp-items="new SelectList(ViewBag.Batches)">
            <option value="">-- Select Batch --</option>
        </select>
        <span asp-validation-for="Batch" class="text-danger"></span>
    </div>

    <div class="col-md-3 mt-4">
        <div class="form-check">
            <input asp-for="ApplyOnWeekend" class="form-check-input" type="checkbox" />
            <label class="form-check-label fw-bold" asp-for="ApplyOnWeekend">
                Apply on Weekend?
            </label>
        </div>
        <span asp-validation-for="ApplyOnWeekend" class="text-danger"></span>
    </div>

    <div class="col-12 mt-4 text-end">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle-fill"></i> Save Vacation
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            console.log("Form validation initialized.");
            $("form").on("submit", function (e) {
                if (!$(this).valid()) {
                    console.log("Form blocked due to validation errors.");
                    e.preventDefault(); // block submit
                }
            });
        });
    </script>
}

