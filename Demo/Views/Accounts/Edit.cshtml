@model Demo.Models.Account
@{
    ViewData["Title"] = "✏️ Edit Account";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="mb-4 text-primary">✏️ Edit Account</h2>

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />
    <div class="col-md-4">
        <label asp-for="AccountCode" class="form-label">Account Code</label>
        <input asp-for="AccountCode" class="form-control" />
    </div>
    <div class="col-md-4">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="col-md-4">
        <label asp-for="GroupId" class="form-label">Account Group</label>
        <select asp-for="GroupId" class="form-select" asp-items="ViewBag.Groups"></select>
    </div>
    <div class="col-md-4">
        <label asp-for="IsActive" class="form-label">Status</label>
        <select asp-for="IsActive" class="form-select">
            <option value="true">Active</option>
            <option value="false">Inactive</option>
        </select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">💾 Update</button>
        <a href="/AccountsDisplay/Index" class="btn btn-secondary">Back</a>
    </div>
</form>
