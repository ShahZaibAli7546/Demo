@model Demo.Models.StudentCategory
@{
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
    ViewData["Title"] = "Delete Student Category";
}

<h2 class="text-danger mb-3">🗑️ Confirm Delete</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this category?
</div>

<dl class="row">
    <dt class="col-sm-3">Category Name</dt>
    <dd class="col-sm-9">@Model.CategoryName</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post" class="d-flex gap-2">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
