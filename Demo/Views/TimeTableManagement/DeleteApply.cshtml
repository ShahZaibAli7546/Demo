@model dynamic

@{
    ViewData["Title"] = "Delete Applied Time Table";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-danger mb-4">🗑️ Delete Applied Time Table</h2>

<h5 class="text-warning">Are you sure you want to delete this applied time table?</h5>

<div class="table-responsive mt-4">
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Campus</th>
                <td>@Model.CampusName</td>
            </tr>
            <tr>
                <th>Time Table</th>
                <td>@Model.TimeTableTitle</td>
            </tr>
            <tr>
                <th>Apply To</th>
                <td>@Model.ApplyTo</td>
            </tr>
            <tr>
                <th>Selected ID(s)</th>
                <td>@Model.SelectedIds</td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>@Model.StartDate</td>
            </tr>
            <tr>
                <th>End Date</th>
                <td>@Model.EndDate</td>
            </tr>
        </tbody>
    </table>
</div>

<form asp-action="DeleteApply" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="mt-4">
        <button type="submit" class="btn btn-danger">🗑️ Confirm Delete</button>
        <a asp-action="Apply" class="btn btn-secondary ms-2">🔙 Cancel</a>
    </div>
</form>
