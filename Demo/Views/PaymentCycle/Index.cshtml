@model IEnumerable<Demo.Models.PaymentCycle>
@{
    ViewData["Title"] = "Payment Cycles";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
    int index = 1;
}

<h2 class="mb-4 text-primary">📅 Payment Cycles</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<a asp-action="Create" class="btn btn-success mb-3">➕ Add Payment Cycle</a>

<div class="table-responsive">
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width: 50px;">#</th>
                <th>Name</th>
                <th>Value</th>
                <th>Status</th>
                <th style="width: 120px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center">No records found.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@item.Name</td>
                        <td>@item.Value</td>
                        <td>@item.Status</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">✏️</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️</a>
                        </td>
                    </tr>
                    index++;
                }
            }
        </tbody>
    </table>
</div>
