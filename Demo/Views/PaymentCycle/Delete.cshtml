@model Demo.Models.PaymentCycle
@{
    ViewData["Title"] = "Delete Payment Cycle";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-danger mb-4">🗑️ Delete Confirmation</h2>

<div class="alert alert-warning">
    Are you sure you want to delete the payment cycle <strong>@Model.Name</strong>?
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">🗑️ Delete</button>
    <a asp-action="Index" class="btn btn-secondary">↩️ Cancel</a>
</form>
