@model List<Demo.Models.StudentWithdrawStatus>
@{
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
    ViewData["Title"] = "Withdraw Status List";
}

<h2 class="mb-4 text-primary">📋 Withdraw Statuses</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<a asp-action="Create" class="btn btn-success mb-3">
    ➕ Add New Status
</a>

<table class="table table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>#</th>
            <th>Status Name</th>
            <th>Description</th>
            <th style="width:150px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].StatusName</td>
                <td>@Model[i].Description</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-sm btn-primary">✏️ Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-sm btn-danger">🗑️ Delete</a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
