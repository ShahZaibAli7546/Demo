@model Demo.Models.LeaveYear
@{
    ViewData["Title"] = "Delete Leave Year";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-danger">❌ Confirm Delete</h2>

<p>Are you sure you want to delete this leave year?</p>

<dl class="row">
    <dt class="col-sm-3">Title</dt>
    <dd class="col-sm-9">@Model.Title</dd>

    <dt class="col-sm-3">Start Date</dt>
    <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

    <dt class="col-sm-3">End Date</dt>
    <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>
</dl>

<form asp-action="DeleteLeaveYearConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
