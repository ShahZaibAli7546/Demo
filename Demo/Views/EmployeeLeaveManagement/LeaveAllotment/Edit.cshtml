@model Demo.Models.LeaveAllotment
@{
    ViewData["Title"] = "Edit Leave Allotment";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-primary mb-3">✏️ Edit Leave Allotment</h2>

<form asp-action="EditLeaveAllotment" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />
    <div class="col-md-6">
        <label asp-for="CampusId" class="form-label"></label>
        <input asp-for="CampusId" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="EmployeeId" class="form-label"></label>
        <input asp-for="EmployeeId" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="LeaveTypeId" class="form-label"></label>
        <input asp-for="LeaveTypeId" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="TotalDays" class="form-label"></label>
        <input asp-for="TotalDays" class="form-control" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
