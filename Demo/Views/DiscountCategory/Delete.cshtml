@model Demo.Models.DiscountCategory

@{
    ViewData["Title"] = "Delete Discount Category";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-danger mb-4">🗑️ Delete Discount Category</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this category: <strong>@Model.Title</strong>?
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
