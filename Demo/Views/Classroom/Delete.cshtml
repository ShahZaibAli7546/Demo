@model Demo.Models.Classroom

@{
    ViewData["Title"] = "Delete Classroom";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-danger mb-3">🗑️ Delete Classroom</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this classroom?</strong>
</div>

<div class="mb-4">
    <dl class="row">
        <dt class="col-sm-3">Class Name:</dt>
        <dd class="col-sm-9">@Model.ClassName</dd>

        <dt class="col-sm-3">Status:</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">QR Code:</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.QRCodeLink))
            {
                <img src="@Url.Action("GenerateQRCode", "Classroom", new { qrText = Model.QRCodeLink })" width="100" alt="QR Code" />
                <div class="text-muted small mt-1">@Model.QRCodeLink</div>
            }
            else
            {
                <span class="text-muted">No QR Code available</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ClassId" />
    <button type="submit" class="btn btn-danger me-2">🗑️ Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">🔙 Cancel</a>
</form>

