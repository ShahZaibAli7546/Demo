@model Demo.Models.EmployeeLeaveType

@{
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
    ViewData["Title"] = "Edit Leave Type";
}

<h2 class="text-primary mb-4">✏️ Edit Leave Type</h2>

<form asp-action="Edit" method="post" class="row g-3">

    <input type="hidden" asp-for="Id" />

    <div class="col-md-6">
        <label asp-for="Name" class="form-label fw-bold"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Symbol" class="form-label fw-bold"></label>
        <input asp-for="Symbol" class="form-control" />
        <span asp-validation-for="Symbol" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Weightage" class="form-label fw-bold"></label>
        <select asp-for="Weightage" class="form-select">
            <option>Full</option>
            <option>Half</option>
        </select>
        <span asp-validation-for="Weightage" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Status" class="form-label fw-bold"></label>
        <select asp-for="Status" class="form-select">
            <option>Active</option>
            <option>Inactive</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="BackgroundColor" class="form-label fw-bold"></label>
        <input asp-for="BackgroundColor" class="form-control" type="color" />
        <span asp-validation-for="BackgroundColor" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Description" class="form-label fw-bold"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check2-circle"></i> Update
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
