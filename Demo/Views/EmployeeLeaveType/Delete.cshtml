@model Demo.Models.EmployeeLeaveType

@{
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
    ViewData["Title"] = "Delete Leave Type";
}

<h2 class="text-danger mb-4">🗑️ Delete Leave Type</h2>

<div class="alert alert-warning">
    <strong>Warning:</strong> Are you sure you want to delete the leave type <strong>@Model.Name</strong>?
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash3"></i> Yes, Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
