@model List<Demo.Models.UpdateTransportFee>
@{
    ViewData["Title"] = "Transport Fee List";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-primary mb-4">🚌 Transport Fee List</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Add New</a>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Campus</th>
            <th>Batch</th>
            <th>Fee Service</th>
            <th>Select Type</th>
            <th>Amount</th>
            <th>Status</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CampusId</td>
                <td>@item.BatchId</td>
                <td>@item.FeeServiceId</td> @* You can show FeeService name instead if you preload names *@
                <td>@item.SelectType</td>
                <td>@item.Amount.ToString("N2")</td>
                <td>
                    <span class="badge bg-@(item.Status == "Active" ? "success" : "secondary")">@item.Status</span>
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️ Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️ Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
