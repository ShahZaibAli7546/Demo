@model Demo.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Demo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
            <h4 class="text-center mb-4 text-primary">Forgot Password</h4>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success text-center">
                    @Html.Raw(TempData["Message"])
                </div>
            }

            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(excludePropertyErrors: true)
                </div>
            }

            <form asp-action="ForgotPassword" method="post" novalidate>
                <div class="form-group mb-3">
                    <label asp-for="Identifier" class="form-label">Username or Email</label>
                    <input asp-for="Identifier" class="form-control" />
                    <span asp-validation-for="Identifier" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Send Reset Link</button>
                </div>

                <div class="text-center mt-3">
                    <a asp-action="Login" class="text-decoration-none">Back to Login</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
