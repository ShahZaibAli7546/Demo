@model Demo.Models.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - PIPS School System</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f0f2f5;
        }

        .box {
            width: 100%;
            max-width: 500px;
            padding: 2rem;
            border-radius: 15px;
            background-color: white;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .branding-box {
            background: linear-gradient(135deg, #0069d9, #004b9a);
            color: white;
            height: 500px;
            text-align: center;
        }

            .branding-box img {
                max-width: 120px;
                filter: drop-shadow(1px 1px 3px rgba(0, 0, 0, 0.3));
            }

        .login-box h3 {
            color: #004b9a;
        }

        .btn-primary-custom {
            background-color: #007bff;
            border: none;
        }

            .btn-primary-custom:hover {
                background-color: #0056b3;
            }

        .form-control:focus,
        .form-check-input:focus {
            box-shadow: none;
            border-color: #007bff;
        }

        .text-primary-custom {
            color: #004b9a;
        }
    </style>
</head>
<body>
    <!-- Bootstrap responsive layout with no custom media queries -->
    <div class="container d-flex flex-column flex-md-row justify-content-center align-items-center gap-4 py-5 min-vh-100">
        <!-- Branding Box -->
        <div class="box branding-box text-center">
            <img src="https://cdn-icons-png.flaticon.com/512/3135/3135789.png" alt="Logo" class="mb-3" />
            <h2 class="fw-bold">Welcome to PIPS School System Kassesay</h2>
            <p class="mt-3 small">
                A complete digital platform for school management — students, staff, attendance, fees & more.
            </p>
        </div>

        <!-- Login Form Box -->
        <div class="box login-box">
            <h3 class="text-center mb-4">Login to Your Account</h3>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["Message"]
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger text-center">Please fix the errors below.</div>
            }

            <form asp-action="Login" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                </div>

                <div class="d-grid mb-2">
                    <button type="submit" class="btn btn-primary-custom fw-bold">🔐 Login</button>
                </div>

                <div class="text-center">
                    <a asp-action="ForgotPassword" class="text-decoration-none text-primary-custom">Forgot your password?</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>
