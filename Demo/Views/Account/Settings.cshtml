<style>
    .settings-item {
        width: 100%;
        text-align: center;
        text-decoration: none;
        color: #333;
        padding: 10px 5px;
        transition: background-color 0.2s ease;
    }

    .settings-icon img {
        width: 42px; /* 30% smaller */
        height: 42px;
        object-fit: contain;
        margin-bottom: 6px;
        transition: filter 0.2s ease;
    }

    .settings-label {
        font-size: 13px;
        font-weight: 500;
        color: #444;
    }

    .settings-item:hover {
        background-color: #e7f1ff; /* light navbar blue */
    }

        .settings-item:hover .settings-icon img {
            filter: brightness(0) saturate(100%) invert(31%) sepia(84%) saturate(2837%) hue-rotate(201deg) brightness(96%) contrast(98%);
        }
</style>

