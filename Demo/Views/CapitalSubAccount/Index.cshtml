@model List<Demo.Models.CapitalSubAccount>
@{
    ViewData["Title"] = "Capital Sub Accounts";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="mb-4 text-primary">🏦 Capital Sub Accounts</h2>

<a href="/CapitalSubAccount/Create" class="btn btn-sm btn-primary mb-3">➕ Add New</a>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>
                    <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                        @(item.IsActive ? "Active" : "Inactive")
                    </span>
                </td>
                <td>
                    <a href="/CapitalSubAccount/Edit/@item.Id" class="btn btn-sm btn-info">✏️ Edit</a>
                    <a href="/CapitalSubAccount/Delete/@item.Id" class="btn btn-sm btn-danger">🗑 Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
