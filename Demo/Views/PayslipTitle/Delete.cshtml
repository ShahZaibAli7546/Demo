@model Demo.Models.PayslipTitle
@{
    ViewData["Title"] = "Delete Payslip Title";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="mb-4 text-danger">🗑️ Confirm Delete</h2>

<div class="alert alert-warning">
    Are you sure you want to delete the following payslip title?
</div>

<dl class="row">
    <dt class="col-sm-3">Title</dt>
    <dd class="col-sm-9">@Model.Title</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">
        <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
            @(Model.IsActive ? "Active" : "Inactive")
        </span>
    </dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">🗑 Delete</button>
    <a asp-action="Index" class="btn btn-secondary">↩️ Cancel</a>
</form>
