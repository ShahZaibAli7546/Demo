@model List<Demo.Models.StudentLeaveType>
@{
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
    ViewData["Title"] = "Student Leave Types";
}

<h2 class="mb-4 text-primary">📋 Leave Types</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<a asp-action="Create" class="btn btn-success mb-3">➕ Add Leave Type</a>

<table class="table table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>#</th>
            <th>Leave Type</th>
            <th>Symbol</th>
            <th>Color</th>
            <th>Status</th>
            <th style="width:160px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <tr>
                <td>@(i + 1)</td>
                <td>@item.LeaveTypeName</td>
                <td>@item.Symbol</td>
                <td>
                    <span class="badge" style="background-color:@item.BackgroundColor">@item.BackgroundColor</span>
                </td>
                <td>@item.Status</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">✏️ Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️ Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
