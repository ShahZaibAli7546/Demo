@model Demo.Models.StudentLeaveType
@{
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
    ViewData["Title"] = "Delete Leave Type";
}

<h2 class="text-danger mb-3">🗑️ Confirm Delete</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this leave type?
</div>

<dl class="row">
    <dt class="col-sm-3">Leave Type</dt>
    <dd class="col-sm-9">@Model.LeaveTypeName</dd>

    <dt class="col-sm-3">Symbol</dt>
    <dd class="col-sm-9">@Model.Symbol</dd>

    <dt class="col-sm-3">Background Color</dt>
    <dd class="col-sm-9">
        <span class="badge" style="background-color:@Model.BackgroundColor">@Model.BackgroundColor</span>
    </dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post" class="d-flex gap-2">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
