@model Demo.Models.BankAccount
@{
    ViewData["Title"] = "Delete Bank Account";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-danger mb-3">🗑️ Delete Bank Account</h2>

<h5>Are you sure you want to delete this bank account?</h5>
<div class="mb-3">
    <strong>Name:</strong> @Model.BankAccountName
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
