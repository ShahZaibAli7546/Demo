@model Demo.Models.FeeStructure
@{
    ViewData["Title"] = "Add Fee Structure";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-success mb-3">➕ Add Fee Structure</h2>

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="StructureName" class="form-label fw-bold">Structure Name</label>
        <input asp-for="StructureName" class="form-control" />
        <span asp-validation-for="StructureName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="FeeServiceId" class="form-label fw-bold">Service</label>
        <select asp-for="FeeServiceId" asp-items="ViewBag.Services" class="form-select">
            <option value="">-- Select Service --</option>
        </select>
        <span asp-validation-for="FeeServiceId" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="FeeDiscountId" class="form-label fw-bold">Discount</label>
        <select asp-for="FeeDiscountId" asp-items="ViewBag.Discounts" class="form-select">
            <option value="">-- Select Discount --</option>
        </select>
        <span asp-validation-for="FeeDiscountId" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Amount" class="form-label fw-bold"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Status" class="form-label fw-bold"></label>
        <select asp-for="Status" class="form-select">
            <option>Active</option>
            <option>Inactive</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Remarks" class="form-label fw-bold"></label>
        <textarea asp-for="Remarks" class="form-control"></textarea>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
